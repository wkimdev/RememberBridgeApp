<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <org.imaginativeworld.whynotimagecarousel.ImageCarousel
        android:id="@+id/carousel"
        android:layout_width="250dp"
        android:layout_height="250dp"

        android:layout_marginStart="32dp"
        android:layout_marginTop="70dp"
        android:layout_marginEnd="32dp"
        android:background="@drawable/background_rectangle_img"
        android:elevation="4dp"

        app:autoPlay="true"
        app:autoPlayDelay="3000"
        app:autoWidthFixing="true"

        app:bottomShadowAlpha="0.1"
        app:bottomShadowHeight="14dp"

        app:carouselBackground="#00000000"
        app:carouselGravity="CENTER"
        app:carouselPadding="0dp"
        app:carouselPaddingBottom="0dp"
        app:carouselPaddingEnd="0dp"

        app:carouselPaddingStart="0dp"
        app:carouselPaddingTop="0dp"
        app:carouselType="BLOCK"
        app:imageScaleType="center"
        app:indicatorMargin="10dp"

        app:infiniteCarousel="true"

        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"

        app:scaleOnScroll="true"
        app:scalingFactor="0.15"
        app:showBottomShadow="true"
        app:showCaption="false"

        app:showIndicator="true"
        app:showNavigationButtons="false"

        app:showTopShadow="true"
        app:topShadowAlpha="0.1"
        app:topShadowHeight="32dp"
        app:touchToPause="true" />


    <TextView
        android:id="@+id/login_txt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="32dp"
        android:text="내 아이와\n새로운 추억 문화의 시작\n 리멤버브릿지와 함께🐾"
        android:textAlignment="center"
        android:textSize="18sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/carousel" />

    <!--라인-->
    <View
        android:id="@+id/login_line"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_centerInParent="true"
        android:layout_marginStart="90dp"
        android:layout_marginTop="42dp"
        android:layout_marginEnd="90dp"
        android:background="#B1ACAC"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/login_txt" />


